<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Current" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textLayout"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/foto"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/pic" />

    <RelativeLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center" >

        <TextView
            android:id="@+id/years_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/years_out"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/nextAnnisText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/years_out"
            android:layout_alignBottom="@+id/years_out"
            android:layout_margin="@dimen/textmargin"
            android:layout_toRightOf="@+id/years_out"
            android:text="@string/years"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/weeks_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="@dimen/textmargin"
            android:layout_toRightOf="@+id/textView3"
            android:text="@string/weeks_out"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/hours_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="@string/hours_out"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/seconds_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_margin="@dimen/textmargin"
            android:layout_marginTop="@dimen/textmargin"
            android:layout_toRightOf="@+id/textView3"
            android:text="@string/seconds_out"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seconds_out"
            android:layout_marginTop="@dimen/textmargin"
            android:layout_toLeftOf="@+id/textView6"
            android:text="@string/seconds"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/years_out"
            android:layout_below="@+id/nextAnnisText"
            android:layout_marginTop="@dimen/textmargin"
            android:text="@string/weeks"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/minutes_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/weeks_out"
            android:text="@string/minutes_out"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/minutes_out"
            android:layout_alignBottom="@+id/minutes_out"
            android:layout_margin="@dimen/textmargin"
            android:layout_toRightOf="@+id/minutes_out"
            android:text="@string/minutes"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/days_out"
            android:layout_margin="@dimen/textmargin"
            android:text="@string/hours"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/days_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_margin="@dimen/textmargin"
            android:layout_toRightOf="@+id/hours_out"
            android:text="@string/days_out"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextAnnisText"
            android:layout_toRightOf="@+id/seconds_out"
            android:text="@string/days"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nextAnnisText"
            android:layout_alignBottom="@+id/nextAnnisText"
            android:layout_alignLeft="@+id/textView6"
            android:text="@string/months"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/months_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="@dimen/textmargin"
            android:layout_toRightOf="@+id/textView2"
            android:text="@string/months_out"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>